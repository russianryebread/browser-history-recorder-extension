{
  "background": {
    "scripts": ["background.js"]
  },
  "description": "Records browser history to Supabase.",
  "homepage_url": "https://hoshor.me/projects/browser-history-recorder/",
  "options_ui": {
    "page": "settings.html"
  },
  "icons": {
    "48": "icons/eye.svg",
    "96": "icons/eye.svg"
  },
  "permissions": [
    "activeTab",
    "history",
    "tabs",
    "storage",
    "webNavigation"
  ],
  "manifest_version": 2,
  "name": "History Recorder",
  "version": "1.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "history-recorder_v1.1@hoshor.me"
    }
  }
}
